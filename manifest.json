{
  "manifest_version": 2,

  "name": "Mod Buddy",
  "description": "This extension helps reddit moderators filter out unwanted posts.",
  "version": "0.0",

  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Mod Buddy"
  },
  
  "permissions": [
	"tabs",
	"https://www.reddit.com/r/",
    "activeTab",
    "background",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "history",
    "idle",
    "management",
    "notifications",
    "pageCapture",
    "tabs",
    "topSites",
    "webNavigation"
   ]
}