{
  "manifest_version": 2,

  "name": "Mod Buddy",
  "description": "This extension helps reddit moderators filter out unwanted posts.",
  "version": "0.0",

  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

  "browser_action": {
    "default_icon": "images/hhcube.png",
    "default_popup": "popup.html",
    "default_title": "Mod Buddy"
  },

  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/r/*"],
      "js": ["getPageSources.js"]
    }
  ],
  
  "permissions": [

    "activeTab",
    "background",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "history",
    "idle",
    "management",
    "notifications",
    "pageCapture",
    "tabs",  //Need
    "topSites",
    "webNavigation"
   ]
}